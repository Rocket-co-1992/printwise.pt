<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin | {{ app_name }}{% endblock %}</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <!-- Custom CSS for Admin -->
    <link rel="stylesheet" href="{{ app_url }}/css/admin.css">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ app_url }}/img/favicon.png">
    {% block head %}{% endblock %}
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4 py-3">
                        <img src="{{ app_url }}/img/logo.png" alt="{{ app_name }}" height="50" class="d-inline-block align-top">
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'dashboard' %}active{% endif %}" href="{{ app_url }}/admin">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'quotes' %}active{% endif %}" href="{{ app_url }}/admin/quotes">
                                <i class="bi bi-receipt me-2"></i>
                                Orçamentos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'clients' %}active{% endif %}" href="{{ app_url }}/admin/clients">
                                <i class="bi bi-people me-2"></i>
                                Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'products' %}active{% endif %}" href="{{ app_url }}/admin/products">
                                <i class="bi bi-box me-2"></i>
                                Produtos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'finishings' %}active{% endif %}" href="{{ app_url }}/admin/finishings">
                                <i class="bi bi-tools me-2"></i>
                                Acabamentos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'waste' %}active{% endif %}" href="{{ app_url }}/admin/waste">
                                <i class="bi bi-recycle me-2"></i>
                                Controle de Desperdício
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'companies' %}active{% endif %}" href="{{ app_url }}/admin/companies">
                                <i class="bi bi-building me-2"></i>
                                Empresas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'users' %}active{% endif %}" href="{{ app_url }}/admin/users">
                                <i class="bi bi-person me-2"></i>
                                Usuários
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_menu == 'settings' %}active{% endif %}" href="{{ app_url }}/admin/settings">
                                <i class="bi bi-gear me-2"></i>
                                Configurações
                            </a>
                        </li>
                    </ul>

                    <hr class="my-3">
                    <div class="px-3">
                        <a href="{{ app_url }}/logout" class="btn btn-danger btn-sm d-flex align-items-center">
                            <i class="bi bi-box-arrow-right me-2"></i> Sair
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{% block page_title %}Dashboard{% endblock %}</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        {% block page_actions %}{% endblock %}
                    </div>
                </div>

                {% if success_message %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ success_message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {% endif %}

                {% if error_message %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error_message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {% endif %}

                {% block admin_content %}{% endblock %}
            </main>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="{{ app_url }}/js/admin.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>
{% extends "layout/main.twig" %}

{% block title %}Meus Pedidos - PrintWise{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Menu do Usuário</h5>
            </div>
            <div class="list-group list-group-flush">
                <a href="/user/profile" class="list-group-item list-group-item-action">Meu Perfil</a>
                <a href="/order" class="list-group-item list-group-item-action active">Meus Pedidos</a>
                <a href="/user/change-password" class="list-group-item list-group-item-action">Alterar Senha</a>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Meus Pedidos</h4>
                <a href="/order/create" class="btn btn-light btn-sm">Novo Pedido</a>
            </div>
            <div class="card-body">
                {% if orders|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Data</th>
                                    <th>Produto</th>
                                    <th>Quantidade</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.created_at|date("d/m/Y") }}</td>
                                    <td>{{ order.product_name }}</td>
                                    <td>{{ order.quantity }}</td>
                                    <td>
                                        {% if order.status == 'pending' %}
                                            <span class="badge bg-warning">Pendente</span>
                                        {% elseif order.status == 'processing' %}
                                            <span class="badge bg-info">Em Processamento</span>
                                        {% elseif order.status == 'completed' %}
                                            <span class="badge bg-success">Concluído</span>
                                        {% elseif order.status == 'cancelled' %}
                                            <span class="badge bg-danger">Cancelado</span>
                                        {% endif %}
                                    </td>
                                    <td>€{{ order.total|number_format(2, ',', '.') }}</td>
                                    <td><a href="/order/show/{{ order.id }}" class="btn btn-sm btn-primary">Detalhes</a></td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <p class="mb-3">Você ainda não tem pedidos.</p>
                        <a href="/order/create" class="btn btn-primary">Fazer Pedido</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
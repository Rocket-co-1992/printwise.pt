{% extends "layouts/admin.twig" %}

{% block page_title %}Orçamento #{{ quote.id }}{% endblock %}

{% block page_actions %}
<div class="btn-group">
    <a href="{{ app_url }}/admin/quotes" class="btn btn-sm btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
    <a href="{{ app_url }}/admin/quotes/edit/{{ quote.id }}" class="btn btn-sm btn-primary">
        <i class="bi bi-pencil"></i> Editar
    </a>
    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#shareModal">
        <i class="bi bi-share"></i> Partilhar
    </button>
    {% if quote.status == 'approved' %}
        <a href="{{ app_url }}/admin/waste/new/{{ quote.id }}" class="btn btn-sm btn-warning">
            <i class="bi bi-clipboard-check"></i> Registrar Produção
        </a>
    {% endif %}
</div>
{% endblock %}

{% block admin_content %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold">{{ quote.title }}</h6>
        <span class="badge {% if quote.status == 'pending' %}bg-warning{% elseif quote.status == 'approved' %}bg-success{% elseif quote.status == 'rejected' %}bg-danger{% else %}bg-info{% endif %}">
            {% if quote.status == 'pending' %}Pendente
            {% elseif quote.status == 'approved' %}Aprovado
            {% elseif quote.status == 'rejected' %}Rejeitado
            {% else %}Concluído{% endif %}
        </span>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <h5>Informações do Cliente</h5>
                <p><strong>Nome:</strong> {{ quote.client_name }}</p>
                <p><strong>Email:</strong> {{ quote.client_email }}</p>
            </div>
            <div class="col-md-6">
                <h5>Informações do Orçamento</h5>
                <p><strong>Data:</strong> {{ quote.created_at|date('d/m/Y H:i') }}</p>
                <p><strong>Produto:</strong> {{ quote.product_name }}</p>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-12">
                <h5>Descrição</h5>
                <p>{{ quote.description|default('Nenhuma descrição fornecida.') }}</p>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-6">
                <h5>Detalhes do Produto</h5>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Tipo
                        <span>{% if quote.product_type == 'small' %}Pequeno Formato{% else %}Grande Formato{% endif %}</span>
                    </li>
                    {% if quote.product_type == 'small' %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Cores
                            <span>{{ quote.colors }}</span>
                        </li>
                    {% else %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Dimensões
                            <span>{{ quote.width|number_format(1, ',', '.') }} x {{ quote.height|number_format(1, ',', '.') }} cm</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Área
                            <span>{{ (quote.width * quote.height / 10000)|number_format(2, ',', '.') }} m²</span>
                        </li>
                    {% endif %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Quantidade
                        <span>{{ quote.quantity }}</span>
                    </li>
                </ul>
            </div>
            <div class="col-md-6">
                <h5>Acabamentos</h5>
                {% if finishings is empty %}
                    <p>Nenhum acabamento selecionado.</p>
                {% else %}
                    <ul class="list-group">
                        {% for finishing in finishings %}
                            <li class="list-group-item">
                                {{ finishing.name }}
                                {% if finishing.is_multiplier %}
                                    <span class="badge bg-info">x{{ finishing.price_factor }}</span>
                                {% else %}
                                    <span class="badge bg-info">+{{ finishing.price_factor|number_format(2, ',', '.') }} €</span>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Valores</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <h6>Valor Unitário</h6>
                                <p class="h4">{{ quote.unit_price|number_format(2, ',', '.') }} €</p>
                            </div>
                            <div class="col-md-4">
                                <h6>Quantidade</h6>
                                <p class="h4">{{ quote.quantity }}</p>
                            </div>
                            <div class="col-md-4">
                                <h6>Valor Total</h6>
                                <p class="h4">{{ quote.total_price|number_format(2, ',', '.') }} €</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {% if quote.status == 'rejected' and quote.reject_reason %}
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <h5>Motivo da Rejeição:</h5>
                        <p>{{ quote.reject_reason }}</p>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<!-- Modal para compartilhar orçamento -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shareModalLabel">Compartilhar Orçamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Copie o link abaixo para compartilhar este orçamento com o cliente:</p>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="shareUrl" value="{{ shareUrl }}" readonly>
                    <button class="btn btn-outline-secondary" type="button" id="copyBtn">
                        <i class="bi bi-clipboard"></i> Copiar
                    </button>
                </div>
                <div class="alert alert-success mt-3" id="copySuccess" style="display: none;">
                    Link copiado com sucesso!
                </div>
                
                <hr>
                
                <p>Ou envie diretamente por email:</p>
                <form id="emailForm">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email do cliente</label>
                        <input type="email" class="form-control" id="email" value="{{ quote.client_email }}">
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar por Email</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Função para copiar o link para o clipboard
        document.getElementById('copyBtn').addEventListener('click', function() {
            var shareUrl = document.getElementById('shareUrl');
            shareUrl.select();
            document.execCommand('copy');
            
            // Mostrar mensagem de sucesso
            var copySuccess = document.getElementById('copySuccess');
            copySuccess.style.display = 'block';
            
            // Esconder mensagem após 3 segundos
            setTimeout(function() {
                copySuccess.style.display = 'none';
            }, 3000);
        });
        
        // Formulário de envio por email
        document.getElementById('emailForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            var email = document.getElementById('email').value;
            var formData = new FormData();
            formData.append('email', email);
            formData.append('quote_id', '{{ quote.id }}');
            
            fetch('{{ app_url }}/admin/quotes/email', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Email enviado com sucesso para ' + email);
                } else {
                    alert('Erro ao enviar email: ' + data.error);
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Ocorreu um erro ao enviar o email.');
            });
        });
    });
</script>
{% endblock %}
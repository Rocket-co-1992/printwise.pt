{% extends "layouts/admin.twig" %}

{% block page_title %}Orçamentos{% endblock %}

{% block page_actions %}
<a href="{{ app_url }}/admin/quotes/new" class="btn btn-sm btn-primary">
    <i class="bi bi-plus-circle"></i> Novo Orçamento
</a>
{% endblock %}

{% block admin_content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">Lista de Orçamentos</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Cliente</th>
                        <th>Título</th>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Data</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% if quotes is empty %}
                        <tr>
                            <td colspan="9" class="text-center">Nenhum orçamento encontrado.</td>
                        </tr>
                    {% else %}
                        {% for quote in quotes %}
                            <tr>
                                <td>{{ quote.id }}</td>
                                <td>{{ quote.client_name }}</td>
                                <td>{{ quote.title }}</td>
                                <td>{{ quote.product_name }}</td>
                                <td>{{ quote.quantity }}</td>
                                <td>{{ quote.total_price|number_format(2, ',', '.') }} €</td>
                                <td>
                                    {% if quote.status == 'pending' %}
                                        <span class="badge bg-warning">Pendente</span>
                                    {% elseif quote.status == 'approved' %}
                                        <span class="badge bg-success">Aprovado</span>
                                    {% elseif quote.status == 'rejected' %}
                                        <span class="badge bg-danger">Rejeitado</span>
                                    {% elseif quote.status == 'completed' %}
                                        <span class="badge bg-info">Concluído</span>
                                    {% endif %}
                                </td>
                                <td>{{ quote.created_at|date('d/m/Y') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ app_url }}/admin/quotes/view/{{ quote.id }}" class="btn btn-sm btn-info" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        {% if quote.status != 'completed' %}
                                            <a href="{{ app_url }}/admin/quotes/edit/{{ quote.id }}" class="btn btn-sm btn-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            {% if quote.status == 'approved' %}
                                                <a href="{{ app_url }}/admin/waste/new/{{ quote.id }}" class="btn btn-sm btn-warning" title="Registrar Produção">
                                                    <i class="bi bi-clipboard-check"></i>
                                                </a>
                                            {% endif %}
                                            <form action="{{ app_url }}/admin/quotes/delete/{{ quote.id }}" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este orçamento?');">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
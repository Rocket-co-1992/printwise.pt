{% extends 'layouts/admin.twig' %}

{% block title %}Controle de Desperdício{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <h1 class="mt-4">Controle de Desperdício</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Controle de Desperdício</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Registros de Desperdício
        </div>
        <div class="card-body">
            {% if wasteRecords is empty %}
                <div class="alert alert-info">
                    Nenhum registro de desperdício encontrado.
                </div>
            {% else %}
                <table class="table table-bordered table-hover" id="wasteTable">
                    <thead>
                        <tr>
                            <th>Orçamento</th>
                            <th>Cliente</th>
                            <th>Produto</th>
                            <th>Qtd. Esperada</th>
                            <th>Qtd. Produzida</th>
                            <th>Desperdício (%)</th>
                            <th>Status</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for waste in wasteRecords %}
                            {% set wastePercentage = ((waste.expected_quantity - waste.actual_quantity) * 100 / waste.expected_quantity)|round(2) %}
                            <tr>
                                <td>{{ waste.quote_title }}</td>
                                <td>{{ waste.client_name }}</td>
                                <td>{{ waste.product_name }}</td>
                                <td>{{ waste.expected_quantity }}</td>
                                <td>{{ waste.actual_quantity }}</td>
                                <td class="{{ wastePercentage > threshold ? 'text-danger fw-bold' : 'text-success' }}">
                                    {{ wastePercentage }}%
                                </td>
                                <td>
                                    {% if wastePercentage <= threshold %}
                                        <span class="badge bg-success">Normal</span>
                                    {% else %}
                                        {% if waste.justification %}
                                            <span class="badge bg-warning">Justificado</span>
                                        {% else %}
                                            <span class="badge bg-danger">Requer Justificativa</span>
                                        {% endif %}
                                    {% endif %}
                                </td>
                                <td>{{ waste.created_at|date('d/m/Y') }}</td>
                                <td>
                                    <a href="/admin/waste/view/{{ waste.id }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    {% if wastePercentage > threshold and not waste.justification %}
                                        <a href="/admin/waste/justify/{{ waste.id }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-comment"></i> Justificar
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    $(document).ready(function() {
        $('#wasteTable').DataTable({
            order: [[7, 'desc']]
        });
    });
</script>
{% endblock %}
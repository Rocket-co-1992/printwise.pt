{% extends "layouts/admin.twig" %}

{% block page_title %}Cadastrar Novo Produto{% endblock %}

{% block page_actions %}
<a href="{{ app_url }}/admin/products" class="btn btn-sm btn-secondary">
    <i class="bi bi-arrow-left"></i> Voltar
</a>
{% endblock %}

{% block admin_content %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">Novo Produto</h6>
    </div>
    <div class="card-body">
        <form method="post" action="{{ app_url }}/admin/products/store" class="needs-validation" novalidate>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Nome do Produto *</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                    <div class="invalid-feedback">
                        Por favor, informe o nome do produto.
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="category" class="form-label">Categoria *</label>
                    <select class="form-select" id="category" name="category" required>
                        <option value="">Selecione...</option>
                        <option value="print">Impressão</option>
                        <option value="finishing">Acabamento</option>
                        <option value="material">Material</option>
                        <option value="service">Serviço</option>
                    </select>
                    <div class="invalid-feedback">
                        Por favor, selecione uma categoria.
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="type" class="form-label">Tipo de Produto</label>
                    <input type="text" class="form-control" id="type" name="type">
                </div>
                <div class="col-md-6">
                    <label for="base_price" class="form-label">Preço Base (€) *</label>
                    <input type="number" step="0.01" class="form-control" id="base_price" name="base_price" required>
                    <div class="invalid-feedback">
                        Por favor, informe o preço base.
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="dimensions" class="form-label">Dimensões</label>
                    <input type="text" class="form-control" id="dimensions" name="dimensions" placeholder="ex: 210x297mm">
                </div>
                <div class="col-md-6">
                    <label for="unit" class="form-label">Unidade de Medida</label>
                    <select class="form-select" id="unit" name="unit">
                        <option value="unit">Unidade</option>
                        <option value="m2">Metro Quadrado (m²)</option>
                        <option value="m">Metro Linear (m)</option>
                        <option value="hour">Hora</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <label for="description" class="form-label">Descrição</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="1" id="active" name="active" checked>
                        <label class="form-check-label" for="active">
                            Produto ativo
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="1" id="featured" name="featured">
                        <label class="form-check-label" for="featured">
                            Produto em destaque
                        </label>
                    </div>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Salvar Produto
                    </button>
                    <a href="{{ app_url }}/admin/products" class="btn btn-secondary">
                        Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    // Form validation
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            const forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
{% endblock %}
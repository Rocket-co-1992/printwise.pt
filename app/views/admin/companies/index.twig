{% extends "layouts/admin.twig" %}

{% block page_title %}Gestão de Empresas{% endblock %}

{% block page_actions %}
<a href="{{ app_url }}/admin/companies/create" class="btn btn-sm btn-primary">
    <i class="bi bi-plus-circle"></i> Nova Empresa
</a>
{% endblock %}

{% block admin_content %}
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold">Lista de Empresas</h6>
        <div>
            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0" method="get">
                <div class="input-group">
                    <input type="text" class="form-control form-control-sm" name="search" placeholder="Buscar empresa..."
                           value="{{ search|default('') }}" aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-sm btn-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>NIF</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Cidade</th>
                        <th>Clientes</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for company in companies %}
                    <tr>
                        <td>{{ company.id }}</td>
                        <td>{{ company.name }}</td>
                        <td>{{ company.tax_id }}</td>
                        <td>{{ company.email }}</td>
                        <td>{{ company.phone }}</td>
                        <td>{{ company.city|default('-') }}</td>
                        <td>{{ company.clients_count|default(0) }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ app_url }}/admin/companies/view/{{ company.id }}" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ app_url }}/admin/companies/edit/{{ company.id }}" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger" 
                                        onclick="confirmDelete('{{ company.id }}', '{{ company.name }}')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Nenhuma empresa encontrada</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% if pagination.total_pages > 1 %}
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item {{ pagination.current_page == 1 ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ app_url }}/admin/companies?page=1{{ search ? '&search=' ~ search : '' }}" aria-label="First">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item {{ pagination.current_page == 1 ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ app_url }}/admin/companies?page={{ pagination.current_page - 1 }}{{ search ? '&search=' ~ search : '' }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    
                    {% for i in max(1, pagination.current_page - 2)..min(pagination.total_pages, pagination.current_page + 2) %}
                    <li class="page-item {{ pagination.current_page == i ? 'active' : '' }}">
                        <a class="page-link" href="{{ app_url }}/admin/companies?page={{ i }}{{ search ? '&search=' ~ search : '' }}">{{ i }}</a>
                    </li>
                    {% endfor %}
                    
                    <li class="page-item {{ pagination.current_page == pagination.total_pages ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ app_url }}/admin/companies?page={{ pagination.current_page + 1 }}{{ search ? '&search=' ~ search : '' }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <li class="page-item {{ pagination.current_page == pagination.total_pages ? 'disabled' : '' }}">
                        <a class="page-link" href="{{ app_url }}/admin/companies?page={{ pagination.total_pages }}{{ search ? '&search=' ~ search : '' }}" aria-label="Last">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        {% endif %}
    </div>
</div>

<!-- Modal for company deletion -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir a empresa <strong id="companyName"></strong>?</p>
                <p class="text-danger">Esta ação não pode ser desfeita e pode afetar clientes associados.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post" action="">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    function confirmDelete(id, name) {
        document.getElementById('companyName').textContent = name;
        document.getElementById('deleteForm').action = "{{ app_url }}/admin/companies/delete/" + id;
        
        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }
</script>
{% endblock %}
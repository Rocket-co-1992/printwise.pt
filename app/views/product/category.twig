{% extends "layout/main.twig" %}

{% block title %}{{ category.name }} - PrintWise{% endblock %}

{% block content %}
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Início</a></li>
            <li class="breadcrumb-item"><a href="/product/categories">Categorias</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
        </ol>
    </nav>

    <div class="mb-4">
        <h1 class="mb-2">{{ category.name }}</h1>
        <p class="lead">{{ category.description }}</p>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-3 mb-4 mb-md-0">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Filtros</h5>
                </div>
                <div class="card-body">
                    <form action="/product/category/{{ category.id }}" method="get" id="filterForm">
                        <div class="mb-3">
                            <label class="form-label">Ordenar por</label>
                            <select class="form-select" name="sort" onchange="document.getElementById('filterForm').submit()">
                                <option value="featured" {% if sort == 'featured' %}selected{% endif %}>Em Destaque</option>
                                <option value="price_low" {% if sort == 'price_low' %}selected{% endif %}>Preço: Menor para Maior</option>
                                <option value="price_high" {% if sort == 'price_high' %}selected{% endif %}>Preço: Maior para Menor</option>
                                <option value="newest" {% if sort == 'newest' %}selected{% endif %}>Mais Recentes</option>
                                <option value="name" {% if sort == 'name' %}selected{% endif %}>Nome (A-Z)</option>
                            </select>
                        </div>

                        {% if subcategories|length > 0 %}
                        <div class="mb-3">
                            <label class="form-label">Subcategorias</label>
                            <div class="list-group">
                                {% for subcategory in subcategories %}
                                <label class="list-group-item">
                                    <input class="form-check-input me-1" type="checkbox" name="subcategory[]" value="{{ subcategory.id }}"
                                           {% if subcategory.id in selected_subcategories %}checked{% endif %}>
                                    {{ subcategory.name }}
                                </label>
                                {% endfor %}
                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary btn-sm">Aplicar Filtros</button>
                                <a href="/product/category/{{ category.id }}" class="btn btn-outline-secondary btn-sm">Limpar</a>
                            </div>
                        </div>
                        {% endif %}
                        
                        <div class="mb-3">
                            <label for="price_range" class="form-label">Preço máximo: €<span id="price_value">{{ max_price }}</span></label>
                            <input type="range" class="form-range" id="price_range" name="max_price" 
                                   min="0" max="{{ price_ceiling }}" step="1" value="{{ max_price }}"
                                   oninput="document.getElementById('price_value').textContent = this.value">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Aplicar Filtros</button>
                    </form>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Precisa de Ajuda?</h5>
                </div>
                <div class="card-body">
                    <p>Não encontrou o que procura? Nossa equipe está pronta para ajudar.</p>
                    <a href="/contact" class="btn btn-outline-primary w-100">Fale Conosco</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            {% if products|length > 0 %}
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for product in products %}
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="position-relative">
                                    <img src="{{ product.image_url|default('/assets/images/default-product.jpg') }}" 
                                         class="card-img-top" alt="{{ product.name }}"
                                         style="height: 200px; object-fit: cover;">
                                    {% if product.is_featured %}
                                        <span class="position-absolute top-0 start-0 badge bg-primary m-2">Destaque</span>
                                    {% endif %}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text text-truncate">{{ product.short_description }}</p>
                                    <p class="fw-bold text-primary">€{{ product.price|number_format(2, ',', '.') }}</p>
                                </div>
                                <div class="card-footer bg-white border-top-0">
                                    <div class="d-grid gap-2">
                                        <a href="/product/show/{{ product.id }}" class="btn btn-primary">Ver Detalhes</a>
                                        <a href="/order/create?product_id={{ product.id }}" class="btn btn-outline-primary">Fazer Pedido</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <div class="mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            {% if currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="/product/category/{{ category.id }}?page={{ currentPage - 1 }}{{ query_string }}">Anterior</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Anterior</span>
                                </li>
                            {% endif %}
                            
                            {% for i in 1..totalPages %}
                                <li class="page-item {% if i == currentPage %}active{% endif %}">
                                    <a class="page-link" href="/product/category/{{ category.id }}?page={{ i }}{{ query_string }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            
                            {% if currentPage < totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="/product/category/{{ category.id }}?page={{ currentPage + 1 }}{{ query_string }}">Próxima</a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Próxima</span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <h4 class="alert-heading">Nenhum produto encontrado!</h4>
                    <p>Não encontramos produtos que correspondam aos critérios selecionados.</p>
                    <hr>
                    <p class="mb-0">Tente ajustar os filtros ou <a href="/product/category/{{ category.id }}">visualize todos os produtos desta categoria</a>.</p>
                </div>
            {% endif %}
            
            <div class="mt-4">
                <h3>Sobre {{ category.name }}</h3>
                <div>{{ category.long_description|raw }}</div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Check if there are checkboxes in filter form
    const checkboxes = document.querySelectorAll('#filterForm input[type="checkbox"]');
    if (checkboxes.length > 0) {
        // Add event listener for apply filter button
        const applyBtn = document.querySelector('#filterForm button[type="submit"]');
        
        // Handle form submission when checkboxes change
        checkboxes.forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                // At least one checkbox should be selected
                let atLeastOneChecked = false;
                checkboxes.forEach(function(cb) {
                    if (cb.checked) {
                        atLeastOneChecked = true;
                    }
                });
                
                // Submit form when a checkbox is changed
                if (atLeastOneChecked) {
                    document.getElementById('filterForm').submit();
                }
            });
        });
    }
});
</script>
{% endblock %}
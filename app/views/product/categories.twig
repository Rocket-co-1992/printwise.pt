{% extends "layout/main.twig" %}

{% block title %}Categorias de Produtos - PrintWise{% endblock %}

{% block content %}
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">In√≠cio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Categorias</li>
        </ol>
    </nav>

    <h1 class="mb-4">Categorias de Produtos</h1>
    
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        {% if categories|length > 0 %}
            {% for category in categories %}
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        {% if category.image_url %}
                            <img src="{{ category.image_url }}" class="card-img-top" alt="{{ category.name }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="bg-light text-center py-5">
                                <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                            <p class="card-text">{{ category.description }}</p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="/product/category/{{ category.id }}" class="btn btn-primary w-100">Ver Produtos</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    Nenhuma categoria encontrada.
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block styles %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
{% endblock %}
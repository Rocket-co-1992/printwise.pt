{% extends "layout/main.twig" %}

{% block title %}{{ product.name }} - PrintWise{% endblock %}

{% block content %}
<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/product">Produtos</a></li>
            <li class="breadcrumb-item"><a href="/product/by-category/{{ product.category_id }}">{{ product.category_name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <img src="{{ product.image_url|default('/assets/images/default-product.jpg') }}" 
                 class="img-fluid rounded shadow" 
                 alt="{{ product.name }}">
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">{{ product.name }}</h2>
            <p class="lead mb-4">{{ product.short_description }}</p>
            <div class="mb-4">
                <h4 class="text-primary">€{{ product.price|number_format(2, ',', '.') }}</h4>
            </div>
            
            <div class="mb-4">
                <h5>Descrição</h5>
                <p>{{ product.description|nl2br }}</p>
            </div>
            
            <div class="mb-4">
                <h5>Especificações</h5>
                <ul class="list-group">
                    {% if product.specifications %}
                        {% for spec in product.specifications %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ spec.name }}
                                <span>{{ spec.value }}</span>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li class="list-group-item">Informações detalhadas não disponíveis</li>
                    {% endif %}
                </ul>
            </div>
            
            <div class="d-grid gap-2">
                <a href="/order/create?product_id={{ product.id }}" class="btn btn-primary btn-lg">Solicitar Orçamento</a>
                <a href="/product" class="btn btn-outline-secondary">Ver Outros Produtos</a>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Produtos Relacionados</h3>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                {% if product.related_products and product.related_products|length > 0 %}
                    {% for related in product.related_products %}
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <img src="{{ related.image_url|default('/assets/images/default-product.jpg') }}" 
                                     class="card-img-top" 
                                     alt="{{ related.name }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ related.name }}</h5>
                                    <p class="fw-bold">€{{ related.price|number_format(2, ',', '.') }}</p>
                                </div>
                                <div class="card-footer bg-white text-center">
                                    <a href="/product/show/{{ related.id }}" class="btn btn-sm btn-outline-primary">Ver Detalhes</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info">
                            Nenhum produto relacionado disponível.
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}